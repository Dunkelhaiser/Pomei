{
    "root": true,
    "env": { "browser": true, "es2020": true },
    "extends": [
        "shared",
        "plugin:react/recommended",
        "plugin:react/jsx-runtime",
        "plugin:react-hooks/recommended",
        "plugin:jsx-a11y/strict",
        "plugin:@tanstack/eslint-plugin-query/recommended",
        "plugin:testing-library/dom",
        "plugin:testing-library/react",
        "plugin:tailwindcss/recommended"
    ],
    "ignorePatterns": ["dist", "vite.config.ts", "postcss.config.js", "tailwind.config.js"],
    "parser": "@typescript-eslint/parser",
    "plugins": ["react-refresh", "readable-tailwind"],
    "rules": {
        "react-refresh/only-export-components": ["warn", { "allowConstantExport": true }],
        "react/self-closing-comp": "error",
        "react/jsx-no-useless-fragment": "error",
        "react/button-has-type": "error",
        "react/function-component-definition": ["error", { "namedComponents": "arrow-function" }],
        "react/hook-use-state": "error",
        "react/jsx-boolean-value": "error",
        "react/jsx-curly-brace-presence": "error",
        "react/jsx-fragments": "error",
        "react/jsx-no-leaked-render": "error",
        "react/jsx-pascal-case": "error",
        "react/no-array-index-key": "error",
        "react/no-unstable-nested-components": "error",

        // Tailwind CSS
        "tailwindcss/enforces-shorthand": "error",
        "tailwindcss/enforces-negative-arbitrary-values": "error",
        "tailwindcss/no-custom-classname": "error",
        "tailwindcss/no-contradicting-classname": "error",
        "tailwindcss/migration-from-tailwind-2": "error",
        "readable-tailwind/no-unnecessary-whitespace": "error",
        "readable-tailwind/multiline": ["error", { "printWidth": 140, "indent": 4, "group": "newLine" }]
    },
    "parserOptions": {
        "project": ["./tsconfig.json"]
    },
    "overrides": [
        {
            "files": ["*.jsx", "*.tsx", "!**/routes/**/*.tsx", "!**/routes/**/*.jsx"],
            "rules": {
                "import/no-default-export": "off"
            }
        },
        {
            "files": ["*.spec.jsx", "*.spec.tsx"],
            "extends": ["plugin:playwright/recommended"]
        }
    ],
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
